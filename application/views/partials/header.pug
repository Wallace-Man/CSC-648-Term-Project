header
    div.header-image
        nav
            table
                tr
                    td(colspan='3')
                        h5 SFSU Software Engineering Project - CSC 648-848 - Spring 2023 **For Demonstration Only**
                tr
                    td.logo
                        a.logo(href='/')
                            span.thin Gator
                            span.bold Bites
                    td.search
                        div.nav-search-form-container
                            form.search-form(onsubmit = 'handleFormSubmit(event)', method="GET",  enctype="application/x-www-form-urlencoded")
                                select#category-select(name='category')
                                    option(value='') All
                                    option(value='italian') Italian
                                    option(value='american') American
                                    option(value='mexican') Mexican
                                    option(value='chinese') Chinese
                                    option(value='japanese') Japanese
                                    option(value='korean') Korean
                                    option(value='thai') Thai
                                    option(value='vietnamese') Vietnamese
                                    option(value='greek') Greek
                                    option(value='french') French
                                input.search-input(id='search-input', type='text', placeholder='Search For Restaurants', maxlength="40", pattern="[a-zA-Z0-9\\s]{0,40}")
                                
                                button.search-btn(type='submit' onclick="window.location.href='/'")
                                    img.search(src='/images/search-icon.png', alt='search',)
                    td.login-signup
                        div.right-btns
                            a.login-btn(href='/login')
                                img.user(src="/images/user.png")
                                span.login Log in
                            a.signup-btn(href='/signup') Sign up
                tr 
                    td.index(colspan='2')
                        ul
                            li 
                                a(href='/aboutUs') About Us
                            li 
                                a(href='/driver') Drivers
                            li 
                                a(href='/restaurant') Restaurants
