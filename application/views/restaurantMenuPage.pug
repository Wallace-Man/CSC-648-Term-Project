extends layouts/main-layout

block content
    head
        title Restaurant Menu
    body
        div#restaurant-main 
            #restaurantInfo
                h1(id="MenuName")
                img(id="restaurantImage")
            div#restaurant-menu
            if menuItems && menuItems.length > 0
                each item in menuItems
                    .menu-card
                        h2= item.itemName
                        p#description= item.itemDescription
                        p.price= item.itemPrice
                        button(id='add-to-cart-button') Add to Cart
            else
                h2 No menu items found.
            // Debug line to print out menuItems
            //- p Debug: #{JSON.stringify(menuItems)}
                
        div#restaurant-cart
            h2 Cart
            hr
            ul 
                p(id="cart-empty") 
            div#cart-buttons
                button(id='clear-cart') Clear Cart
                button(onclick="window.location.href='/cart'") Go To Cart

    script(type='module' src="/js/restaurantMenu.js")
    script(type='module' src="/js/cart.js")
