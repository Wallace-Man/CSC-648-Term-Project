extends layouts/main-layout

block content
  head 
    title Edit Your Account
  br
  br
  br
  .driverAccountFormContainer
        form.driverAccountForm(id='user-account-form', action="/editUserAccount", method="post")
            p#get-started Edit Details
            img(src="/images/userProfile.png", alt="Profile Picture")
            label(for="driver-name-input") Your Name:
            input#driver-name-input(type="text", name="fullname", value=user.full_name, maxlength="40", pattern="[a-zA-Z0-9\\s]{0,40}", required)
            label.driver-id(for="imageURL") Upload ID:
            input.driver-id(type="url", id="imageURL", name="imageURL", placeholder='imageURL' value=user.gator_id)
            label(for="driver-phone-input") Phone Number:
            input#driver-phone-input(type="tel", name="phone", pattern='[0-9]{3}-[0-9]{3}-[0-9]{4}', value=user.phone , required)
            label(for="driver-vehicle-input") Email:

            input#driver-vehicle-input(type="text", placeholder="student@sfsu.edu", name="email", minlength="7", maxlength="20", pattern=".+@sfsu\.edu", oninvalid="setCustomValidity('Must be @sfsu.edu')", oninput="setCustomValidity('')")
            //label(for="driver-location-input") Change Password:
            //input#driver-location-input(type="password", name="driverLocation", minlength="4", maxlength="20", required)
            //label(for="driver-location-input") Confirm Password:
            //input#driver-location-input(type="password", name="driverLocation", minlength="4", maxlength="20", required)
            label(for="additional-info")  Bio (Optional):

            textarea#additional-info(type="textarea", name="additionalInfo", maxlength="200", pattern="[a-zA-Z0-9\\s.-?]{0,200}")
            button#save-driver-button(type="submit") Save Changes